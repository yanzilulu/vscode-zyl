{
	"name": "zyl",
	"displayName": "居老师鼓励师",
	"description": "居老师鼓励师~与你同在",
	"version": "0.0.4",
	"publisher": "yanzilulu",
	"icon": "logo.jpg",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"朱一龙",
		"居老师",
		"居一龙",
		"鼓励师"
	],
	"bugs": {
        "url": "https://github.com/yanzilulu/vscode-zyl/issues",
        "email": "793617505@qq.com"
    },
    "homepage": "https://github.com/yanzilulu/vscode-zyl/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/yanzilulu/vscode-zyl.git"
    },
	"activationEvents": [
		"onCommand:zyl.showReminderView",
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "zyl.showReminderView",
				"title": "召唤居老师~",
				"category": "zyl"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "zyl.showReminderView",
					"group": "navigation"
				}
			]
		},
		"configuration": {
            "type": "object",
            "title": "朱一龙",
            "properties": {
				"zyl.remind.enabled": {
					"type": "boolean",
					"default": true,
					"description": "是否启用定时提醒休息"
				},
                "zyl.remind.reminderViewIntervalInMinutes": {
                    "type": "number",
                    "default": 120,
                    "description": "展示提醒页面的时间间隔（分钟）"
                },
                "zyl.remind.title": {
                    "type": "string",
                    "default": "代码写久了，喝杯水休息一下~",
                    "description": "页面内展示文字标题"
				},
				"zyl.remind.content": {
                    "type": "string",
                    "default": "今天也是和居老师一起努力工作的一天呢~",
                    "description": "页面内展示文字内容"
                },
                "zyl.remind.type": {
                    "type": "string",
                    "default": "default",
                    "description": "类型：default:默认图；url：网络图"
                },
                "zyl.remind.customImages": {
                    "type": "array",
                    "default": [
                        "http://zyl.jpg"
                    ],
                    "description": "用户设置图片地址"
				},
				"background.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Plugin background enabled.background 插件是否启用"
                }
            }
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
